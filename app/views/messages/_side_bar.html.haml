.SideBar
  .SideBar__UserName
    .TopItems
      .TopItems__name
        = current_user.name
      .TopItems__icon
        = link_to new_group_path do
          = icon('far' , 'edit', class: "TopItems__icon--btn")
        = link_to edit_user_path(current_user)  do
          = icon('fas' , 'cog', class: "TopItems__icon--btn")
  .SideBar__GroupList
    - current_user.groups.each do |group|
      .SideBar_GroupTop
        = link_to group_messages_path(group) do
          .GroupName
            = group.name
          .GroupMessage
            = group.show_last_message

